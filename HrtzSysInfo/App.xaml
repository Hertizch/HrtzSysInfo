<Application x:Class="HrtzSysInfo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:HrtzSysInfo.ViewModels"
             xmlns:tools="clr-namespace:HrtzSysInfo.Tools"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Window.xaml" />
                <ResourceDictionary Source="Styles/TextContainer.xaml" />
                <ResourceDictionary Source="Styles/ProgressBar.xaml" />
                <ResourceDictionary Source="Styles/Grid.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <viewModels:ShellVm x:Key="ShellVm" />
            <tools:UserSettings x:Key="UserSettings" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
