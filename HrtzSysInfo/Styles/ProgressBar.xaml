<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:HrtzSysInfo.Controls">

    <Style x:Key="StyleSectionValueProgressBar" TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="1" />
        <Setter Property="BorderBrush" Value="#FF232323" />
        <Setter Property="Foreground" Value="SaddleBrown" />
        <Setter Property="Margin" Value="0,0,0,5" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=controls:ValueContainer}, Path=ShowProgressBar}" Value="False">
                <Setter Property="Visibility" Value="Hidden" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>